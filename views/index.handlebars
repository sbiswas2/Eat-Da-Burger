<div class="container">

	<div class="row">
		<div class="col-md-12">
			<img src="../public/assets/img/burger.png" alt="burger" class="img-responsive center-block">
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center text-danger">Eat-Da-Burger</h1>
		</div>
	</div>
	
	<div class="row">
		<div class="col-md-5">
			<ul>
				{{#each burgers}}
				<li>
					<p>ID: {{this.id}}</p>
					<p>Burger: {{this.burger}}</p>
				</li>
				{{/each}}
			</ul>
		</div>

		<div class="col-md-2"></div>

		<div class="col-md-5">
			<ul>
				{{#each burgers}}
				<li>
					<p>ID: {{this.id}}</p>
					<p>Burger: {{this.burger}}</p>
				</li>
				{{/each}}
			</ul>
		</div>
	</div>
	
	<div class="row">
		<div class="col-md-12 text-center">
			<form action="/" method="POST">
				<textarea type="text" name="burger"></textarea>

				<button type="submit">Submit</button>
			</form>
		</div>
	</div>
	
</div>